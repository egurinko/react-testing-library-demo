{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ESNext",
      "dom"
    ],
    "jsx": "react",
    "baseUrl": "./src",
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
